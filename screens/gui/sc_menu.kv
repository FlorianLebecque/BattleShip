
<sc_menu>:
    GridLayout:
        rows:4
        padding : [100,100,100,100]
        spacing : [10,10]

        canvas.before:
            Color:
                rgba: 0.19, 0.21, 0.25, 1
            Rectangle:
                pos: self.pos
                size: self.size

        Label:
            font_size: "80sp"
            text:"BattleShip"


        Button:
            text:"Player-Player"
            on_release: self.parent.parent.goToBoatPlacer(0)


        Button:
            text:"Player-Computer"
            on_release: self.parent.parent.goToBoatPlacer(1)

        Button:
            text:"Score"
            on_release: self.parent.parent.goTo_score()
