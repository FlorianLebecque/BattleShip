
<sc_score>:
    on_enter:self.getdata()
    GridLayout:
        rows:2

        canvas.before:
            Color:
                rgba: 0.19, 0.21, 0.25, 1
            Rectangle:
                pos: self.pos
                size: self.size

        BoxLayout:
            size_hint_y:0.1
        
            Button:
                size_hint_x:0.3
                text:"<"
                on_release: root.manager.current = "sc_menu"
                

            Label:
                font_size: "40sp"
                text:"Scoreboard"

        BoxLayout:
            size_hint_y:0.9
            
            RecycleView:
                id:myRv
                viewclass: 'Label'
                RecycleBoxLayout:
                    default_size: None, dp(56)
                    size_hint_y: None
                    default_size_hint: 1, None
                    height: self.minimum_height
                    orientation: 'vertical'